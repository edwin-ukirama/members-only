<%= form_with model: post do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field(:title, class:'form-control') %>
  </div>

  <div class="mb-3">
    <%= form.label :content %>
    <%= form.text_area(:content, class:'form-control') %>
  </div>

  <div class="mb-3">
    <%= form.submit(class: 'btn btn-primary') %>
  </div>
<% end %>
